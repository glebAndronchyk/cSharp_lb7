<Window x:Class="LB7_2.SecondTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LB7_2"
        mc:Ignorable="d"
        Title="SecondTaskWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Padding="10px" Background="Coral" Height="40px">
            <DockPanel>
                <TextBlock VerticalAlignment="Center" FontFamily="Calibry" FontSize="16px">LB7 - WPF. Variant(6) - Andronchyk. Build fir tree</TextBlock>
            </DockPanel>
        </Border>
        
        <Grid Grid.Row="1">
            <Canvas x:Name="FirTree" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Width="20" Height="180" Fill="Chocolate" />
            </Canvas>
        </Grid>
    </Grid>
</Window>
